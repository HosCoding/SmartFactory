namespace P133App
{
    class Circle
    {
        private double pi = 3.14;

        public double Pi
        {
            get
            {
                return pi;
            }
            set
            {
                pi = value;
            }
        }
    }
    internal class Program
    {
        static void Main(string[] args)
        {
            Circle o = new Circle();
            o.Pi = 3.14159;        // 프로퍼티 쓰기
            double piValue = o.Pi; // 프로퍼티 읽기
        }
    }
}
