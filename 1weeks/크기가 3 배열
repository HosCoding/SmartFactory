namespace Array02
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string[] arr = new string [3];

            for (int i = 0; i < 4; i++) 
            {
                arr[0] = "X";
                arr[1] = "Y";
                arr[2] = "Z";
            }
            for (int i = 0; i < 4; i++)
            { 
            Console.WriteLine(arr[i]);
            }
        }
    }
}
